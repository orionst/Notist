<?xml version="1.0" encoding="utf-8"?>
<navigation
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main_graph"
        app:startDestination="@+id/splash_fragment"
        >

    <fragment
            android:id="@+id/note_list_fragment"
            android:name="com.orionst.notist.ui.screens.note_list.NoteListFragment"
            tools:layout="@layout/fragment_note_list"
            >
        <action
                android:id="@+id/action_open_note"
                app:destination="@+id/note_fragment"
                />
        <action
                android:id="@+id/action_sign_out_to_splash"
                app:destination="@id/splash_fragment"
                app:popUpTo="@id/note_list_fragment"
                app:popUpToInclusive="true"
                />
    </fragment>

    <fragment
            android:id="@+id/note_fragment"
            android:name="com.orionst.notist.ui.screens.note.NoteFragment"
            tools:layout="@layout/fragment_note">
        <argument
                android:name="noteId"
                app:argType="string"
                app:nullable="true"
                android:defaultValue="@null"
                />
    </fragment>

    <fragment
            android:id="@+id/splash_fragment"
            android:name="com.orionst.notist.ui.screens.splash.SplashFragment"
            android:label="SplashFragment"
            >
        <action
                android:id="@+id/action_sign_in_to_app"
                app:destination="@id/note_list_fragment"
                app:popUpTo="@id/splash_fragment"
                app:popUpToInclusive="true"
                />
    </fragment>


</navigation>